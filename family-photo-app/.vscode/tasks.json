{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Development Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "Build for Production",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"group": "build",
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "Deploy to Vercel",
			"type": "shell",
			"command": "npx",
			"args": [
				"vercel",
				"--prod"
			],
			"group": "build",
			"dependsOn": "Build for Production"
		},
		{
			"label": "Preview Deployment",
			"type": "shell",
			"command": "npx",
			"args": [
				"vercel"
			],
			"group": "build"
		}
	]
}